<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.statfinder.statfinder.QuestionActivity"
                android:background="#444444">


    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Sample Answer 1"
        android:id="@+id/answer1Button"
        android:background="#992288"
        android:layout_below="@+id/questionContent"
        android:layout_alignRight="@+id/questionText"
        android:layout_alignEnd="@+id/questionText"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Sample Answer 2"
        android:id="@+id/answer2Button"
        android:background="#3366aa"
        android:layout_below="@+id/orText"
        android:layout_alignLeft="@+id/answer1Button"
        android:layout_alignStart="@+id/answer1Button"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sample Question:"
        android:id="@+id/questionText"
        android:textAlignment="center"
        android:textColor="#b3b3b3"
        android:layout_below="@+id/userLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Skip"
        android:id="@+id/skipButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="or"
        android:id="@+id/orText"
        android:textColor="#b3b3b3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Category: "
        android:id="@+id/categoryLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#51fa03" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="User/Moderator:"
        android:id="@+id/userLabel"
        android:textColor="#51fa03"
        android:layout_below="@+id/categoryLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/questionText"
        android:layout_toLeftOf="@+id/questionText"
        android:layout_alignRight="@+id/answer1Button"
        android:layout_alignEnd="@+id/answer1Button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/categoryText"
        android:layout_above="@+id/userLabel"
        android:layout_toRightOf="@+id/categoryLabel"
        android:layout_toEndOf="@+id/categoryLabel"
        android:textColor="#51fa03" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="User or Moderator"
        android:id="@+id/userText"
        android:layout_below="@+id/categoryText"
        android:layout_centerHorizontal="true"
        android:textColor="#51fa03" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question goes here"
        android:id="@+id/questionContent"
        android:layout_below="@+id/questionText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>


